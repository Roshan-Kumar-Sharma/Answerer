                                class="text-dark fw-bold me-3 py-1 px-2 border border-dark rounded"
                                >id: <%= `${i+1}` %></span
                            >
                        </div>

                        <!-- answer accordian -->
                        <div class="accordion answers">
                            <% for(let j=0; j<3; j++) {%>
                            <div class="accordion-item">
                                <h2
                                    class="accordion-header"
                                    id="<%= `q${i+1}a${j+1}-heading` %>"
                                >
                                    <div
                                        class="accordion-button"
                                        type="button"
                                        data-bs-toggle="collapse"
                                        data-bs-target="<%= `#q${i+1}a${j+1}h${j+1}` %>"
                                        aria-expanded="true"
                                        aria-controls="<%= `q${i+1}a${j+1}h${j+1}` %>"
                                    >
                                        Answer #<%= `${j+1}` %>
                                    </div>
                                </h2>
                                <div
                                    id="<%= `q${i+1}a${j+1}h${j+1}` %>"
                                    class="accordion-collapse collapse"
                                    aria-labelledby="<%= `q${i+1}a${j+1}-heading` %>"
                                >
                                    <div
                                        class="accordion-body"
                                        id="<%= `q${i+1}a${j+1}` %>"
                                    >
