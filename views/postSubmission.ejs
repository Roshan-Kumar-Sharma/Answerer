        <div id="main" class="content d-flex bd-highlight">
            <div class="w-100 p-2 d-flex flex-column justify-content-center">
                <!-- heading -->
                <div
                    class="d-flex align-items-center justify-content-center my-3"
                >
                    <i class="fad fa-badge-check fa-5x"></i>
                    <span class="ms-3 fs-1"
                        >Question Added Successfully!!!</span
                    >
                </div>

                <!-- question answer -->
                <div id="ques-ans-section" class="container-fluid">
                    <% for(let i=0; i<1; i++) {%>
                    <div class="mb-5 border border-secondary">
                        <!-- question -->
                        <div
                            class="container-fluid questions"
                            id="<%= `question${i+1}` %>"
